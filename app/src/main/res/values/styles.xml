<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CD_Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="md_divider">@color/divider_black</item>
        <item name="md_list_selector">@drawable/selector</item>
        <item name="md_btn_stacked_selector">@drawable/selector</item>
        <item name="md_btn_positive_selector">@drawable/btn_selector</item>
        <item name="md_btn_neutral_selector">@drawable/btn_selector</item>
        <item name="md_btn_negative_selector">@drawable/btn_selector</item>

        <item name="android:windowAnimationStyle">@style/CD_WindowAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CD_Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="md_divider">@color/divider_white</item>
        <item name="md_list_selector">@drawable/selector_dark</item>
        <item name="md_btn_stacked_selector">@drawable/selector_dark</item>
        <item name="md_btn_positive_selector">@drawable/btn_selector_dark</item>
        <item name="md_btn_neutral_selector">@drawable/btn_selector_dark</item>
        <item name="md_btn_negative_selector">@drawable/btn_selector_dark</item>

        <item name="android:windowAnimationStyle">@style/CD_WindowAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="CD_ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="CD_ActionButton.Text" tools:ignore="NewApi">
        <item name="android:textSize">@dimen/button_textsize</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:paddingLeft">@dimen/button_textpadding_horizontal</item>
        <item name="android:paddingRight">@dimen/button_textpadding_horizontal</item>
    </style>

    <style name="CD_WindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>



</resources>
